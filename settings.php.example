<?php

function dbConnect() {
  $dbaddress = "localhost";
  $dbuser = "YOUR_DB_USER";
  $dbpass = "YOUR_DB_PASS";
  $dbname = "YOUR_DB_NAME";
  
	$conn = new mysqli($dbaddress, $dbuser, $dbpass, $dbname);

  if ($conn->connect_error) {
      die('Connect Error (' . $conn->connect_errno . ') '
            . $conn->connect_error);
  }
	  return $conn;
}
